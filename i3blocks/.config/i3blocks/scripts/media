#!/usr/bin/env bash
# teal - matches waybar custom/media
STATUS=$(playerctl status 2>/dev/null)
if [ -z "$STATUS" ] || [ "$STATUS" = "Stopped" ]; then
    exit 0
fi
ARTIST=$(playerctl metadata xesam:artist 2>/dev/null | cut -c1-20)
TITLE=$(playerctl metadata xesam:title 2>/dev/null | cut -c1-25)
if [ -n "$TITLE" ]; then
    echo "<span color='#94e2d5'>  ${ARTIST:+$ARTIST: }$TITLE</span>"
fi
